{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "build",
            "command": "/usr/sbin/g++",
            "args": [
                "${file}",
                "-o",
                "${fileBasenameNoExtension}.exe",
                "-std=c++17",
                "-O0",
                "-g3",
                "-Wall",
                "-Wextra",
                "-Wno-unknown-pragmas",
                "-fsanitize=undefined",
                "-D",
                "HOGEPACHI",
                "-D",
                "_GLIBCXX_DEBUG",
                "-I",
                "${workspaceFolder}/algolib/src",
                "-I",
                "${workspaceFolder}/ac-library"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "現在開いているファイルをビルドする",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "build(Release)",
            "command": "/usr/sbin/g++",
            "args": [
                "${file}",
                "-o",
                "${fileBasenameNoExtension}.exe",
                "-std=c++17",
                "-O2",
                "-Wall",
                "-Wextra",
                "-Wno-unknown-pragmas",
                "-D",
                "HOGEPACHI",
                "-I",
                "${workspaceFolder}/algolib/src",
                "-I",
                "${workspaceFolder}/ac-library"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "現在開いているファイルをReleaseビルドする",
        },
        {
            "type": "shell",
            "label": "build input generator",
            "command": "/usr/sbin/g++",
            "args": [
                "${fileBasenameNoExtension}_gi.cpp",
                "-D",
                "HOGEPACHI",
                "-o",
                "${fileBasenameNoExtension}_gi.exe",
                "-std=c++17",
                "-O2",
                "-I",
                "${workspaceFolder}/algolib/src",
                "-I",
                "${workspaceFolder}/ac-library"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "入力生成器をビルドする"
        },
        {
            "type": "shell",
            "label": "build output generator",
            "command": "/usr/sbin/g++",
            "args": [
                "${fileBasenameNoExtension}_go.cpp",
                "-D",
                "HOGEPACHI",
                "-o",
                "${fileBasenameNoExtension}_go.exe",
                "-std=c++17",
                "-O2",
                "-I",
                "${workspaceFolder}/algolib/src",
                "-I",
                "${workspaceFolder}/ac-library"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "出力生成器をビルドする"
        },
        {
            "type": "shell",
            "label": "clean",
            "command": "rm",
            "args": [
                "-rf",
                "${fileBasenameNoExtension}_case",
                "${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "dependsOn": [],
            "problemMatcher": [],
            "detail": "テストケースを削除する"
        },
        {
            "type": "shell",
            "label": "download",
            "command": "~/.local/bin/oj",
            "args": [
                "dl",
                "\"${input:URL}\"",
                "--directory=\"${fileBasenameNoExtension}_case\""
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "dependsOn": [
                "clean"
            ],
            "problemMatcher": [],
            "group": "test",
            "detail": "テストケースをダウンロード"
        },
        {
            "type": "shell",
            "label": "test",
            "command": "~/.local/bin/oj",
            "args": [
                "test",
                "--directory=\"${fileBasenameNoExtension}_case\"",
                "--command=\"./${fileBasenameNoExtension}.exe\""
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "dependsOn": [
                "build"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "detail": "現在開いているファイルをテスト"
        },
        {
            "type": "shell",
            "label": "test(TLE)",
            "command": "~/.local/bin/oj",
            "args": [
                "test",
                "--tle",
                "2",
                "--directory=\"${fileBasenameNoExtension}_case\"",
                "--command=\"./${fileBasenameNoExtension}.exe\""
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "dependsOn": [
                "build(Release)"
            ],
            "problemMatcher": [],
            "detail": "現在開いているファイルをテスト(TLE)"
        },
        {
            "type": "shell",
            "label": "hack",
            "command": "~/.local/bin/oj",
            "args": [
                "g/i",
                "--hack-actual",
                "./${fileBasenameNoExtension}.exe",
                "--hack-expected",
                "./${fileBasenameNoExtension}_go.exe",
                "--directory=\"${fileBasenameNoExtension}_case\"",
                "./${fileBasenameNoExtension}_gi.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "dependsOn": [
                "build",
                "build input generator",
                "build output generator"
            ],
            "problemMatcher": [],
            "detail": "Hackケース生成"
        },
        {
            "type": "shell",
            "label": "generate input",
            "command": "~/.local/bin/oj",
            "args": [
                "g/i",
                "--directory=\"${fileBasenameNoExtension}_case\"",
                "./${fileBasenameNoExtension}_gi.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "dependsOn": [
                "build input generator"
            ],
            "problemMatcher": [],
            "detail": "入力生成"
        },
        {
            "type": "shell",
            "label": "generate output",
            "command": "~/.local/bin/oj",
            "args": [
                "g/o",
                "--directory=\"${fileBasenameNoExtension}_case\"",
                "-c",
                "./${fileBasenameNoExtension}_go.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "dependsOn": [
                "build output generator"
            ],
            "problemMatcher": [],
            "detail": "出力生成"
        },
        {
            "type": "shell",
            "label": "hack(RE)",
            "command": "~/.local/bin/oj",
            "args": [
                "g/i",
                "--tle",
                "3",
                "--hack-actual",
                "./${fileBasenameNoExtension}.exe",
                "--directory=\"${fileBasenameNoExtension}_case\"",
                "./${fileBasenameNoExtension}_gi.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "dependsOn": [
                "build",
                "build input generator"
            ],
            "problemMatcher": [],
            "detail": "Hackケース生成(RE用)"
        },
        {
            "type": "shell",
            "label": "hack(RE/TLE)",
            "command": "~/.local/bin/oj",
            "args": [
                "g/i",
                "--hack-actual",
                "./${fileBasenameNoExtension}.exe",
                "--directory=\"${fileBasenameNoExtension}_case\"",
                "./${fileBasenameNoExtension}_gi.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "dependsOn": [
                "build(Release)",
                "build input generator"
            ],
            "problemMatcher": [],
            "detail": "Hackケース生成(RE,TLE用)"
        },
        {
            "type": "shell",
            "label": "expand",
            "command": "python3",
            "args": [
                "${workspaceFolder}/tools/expander/main.py",
                "${file}",
                "-I",
                "${workspaceFolder}/algolib/src",
                "${workspaceFolder}/ac-library",
                "--save_to_clipboard"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "dependsOn": [],
            "problemMatcher": [],
            "detail": "現在開いているファイルを展開"
        },
        {
            "type": "shell",
            "label": "expand(file)",
            "command": "python3",
            "args": [
                "${workspaceFolder}/tools/expander/main.py",
                "${file}",
                "-I",
                "${workspaceFolder}/algolib/src",
                "${workspaceFolder}/ac-library",
                "--save_output",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "dependsOn": [],
            "problemMatcher": [],
            "detail": "現在開いているファイルを展開"
        }
    ],
    "inputs": [
        {
            "id": "URL",
            "type": "promptString",
            "description": "URL of problem"
        }
    ]
}
