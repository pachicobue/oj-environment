{
    "version": "2.0.0",
    "options": {
        "cwd": "${fileDirname}"
    },
    "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
    },
    "type": "shell",
    "problemMatcher": [],
    "inputs": [
        {
            "id": "URL",
            "type": "promptString",
            "description": "問題のURL"
        },
        {
            "id": "InputFile",
            "type": "command",
            "command": "oj-testcase-manager.pickTestcase"
        },
        {
            "id": "TL",
            "description": "oj testコマンドのTL設定(単位は[秒])",
            "type": "promptString",
            "default": "3"
        }
    ],
    "tasks": [
        {
            "label": "Run on Single Input",
            "detail": "現在開いているファイルを実行する(入力ファイル指定)",
            "command": "./${fileBasenameNoExtension}.exe",
            "args": [
                "<",
                "${fileBasenameNoExtension}_case/${input:InputFile}"
            ],
            "dependsOn": [
                "Build(Debug)"
            ],
            "presentation": {
                "reveal": "always",
            }
        },
        {
            "label": "Test",
            "detail": "現在開いているファイルをテストする",
            "command": "oj",
            "args": [
                "test",
                "--directory=\"${fileBasenameNoExtension}_case\"",
                "--command=\"./${fileBasenameNoExtension}.exe\""
            ],
            "dependsOn": [
                "Build(Debug)"
            ]
        },
        {
            "label": "Test(TLE)",
            "detail": "現在開いているファイルをテストする(TLEチェック)",
            "command": "oj",
            "args": [
                "test",
                "--tle",
                "${input:TL}",
                "--directory=\"${fileBasenameNoExtension}_case\"",
                "--command=\"./${fileBasenameNoExtension}.exe\""
            ],
            "dependsOn": [
                "Build(Release)"
            ]
        },
        {
            "label": "Generate Hack Case",
            "detail": "Hackケースを生成する(出力比較)",
            "command": "oj",
            "args": [
                "g/i",
                "--hack-actual",
                "./${fileBasenameNoExtension}.exe",
                "--hack-expected",
                "./${fileBasenameNoExtension}_go.exe",
                "--directory=\"${fileBasenameNoExtension}_case\"",
                "./${fileBasenameNoExtension}_gi.exe"
            ],
            "dependsOn": [
                "Build(Debug)",
                "Build Input Generator(Release)",
                "Build Output Generator(Release)"
            ],
            "presentation": {
                "reveal": "always",
            }
        },
        {
            "label": "Generate Hack Case(RE)",
            "detail": "Hackケースを生成する(REチェック)",
            "command": "oj",
            "args": [
                "g/i",
                "--hack-actual",
                "./${fileBasenameNoExtension}.exe",
                "--directory=\"${fileBasenameNoExtension}_case\"",
                "./${fileBasenameNoExtension}_gi.exe"
            ],
            "dependsOn": [
                "Build(Debug)",
                "Build Input Generator(Release)"
            ],
            "presentation": {
                "reveal": "always",
            }
        },
        {
            "label": "Generate Hack Case(TLE)",
            "detail": "Hackケースを生成する(TLEチェック)",
            "command": "oj",
            "args": [
                "g/i",
                "--tle=${input:TL}",
                "--hack-actual",
                "./${fileBasenameNoExtension}.exe",
                "--directory=\"${fileBasenameNoExtension}_case\"",
                "./${fileBasenameNoExtension}_gi.exe"
            ],
            "dependsOn": [
                "Build(Release)",
                "Build Input Generator(Release)"
            ],
            "presentation": {
                "reveal": "always",
            }
        },
        {
            "label": "Download Testcases",
            "detail": "テストケースをダウンロードする",
            "command": "oj",
            "args": [
                "dl",
                "\"${input:URL}\"",
                "--directory=\"${fileBasenameNoExtension}_case\""
            ],
            "dependsOn": [
                "Delete Testcases"
            ]
        },
        {
            "label": "Expand File",
            "detail": "現在開いているファイルを展開する(ファイル作成)",
            "command": "python3",
            "args": [
                "${workspaceFolder}/tools/expander/main.py",
                "${file}",
                "-I",
                "${workspaceFolder}/algolib/src",
                "${workspaceFolder}/ac-library",
                "--save_output"
            ]
        },
        {
            "label": "PreCompile algolib",
            "detail": "algolibのheader.hppをプリコンパイルする",
            "dependsOn": [
                "PreCompile header.hpp(Debug)",
                "PreCompile header.hpp(Release)"
            ]
        },
        {
            "label": "Build(Debug)",
            "detail": "現在開いているファイルをDebugビルドする",
            "hide": true,
            "command": "$CXX_COMPILER",
            "args": [
                "${file}",
                "$CXX_COMMON_OPTIONS",
                "$CXX_DEBUG_OPTIONS",
                "-o",
                "${fileBasenameNoExtension}.exe"
            ]
        },
        {
            "label": "Build(Release)",
            "detail": "現在開いているファイルをReleaseビルドする",
            "hide": true,
            "command": "$CXX_COMPILER",
            "args": [
                "${file}",
                "$CXX_COMMON_OPTIONS",
                "$CXX_RELEASE_OPTIONS",
                "-o",
                "${fileBasenameNoExtension}.exe"
            ]
        },
        {
            "label": "PreCompile header.hpp(Debug)",
            "detail": "algolibのheader.hppをDebugビルドでプリコンパイルする",
            "hide": true,
            "command": "$CXX_COMPILER",
            "args": [
                "{$ALGOLIB_PATH}/src/header.hpp",
                "$CXX_COMMON_OPTIONS",
                "$CXX_DEBUG_OPTIONS",
                "-o",
                "{$ALGOLIB_PATH}/src/header.hpp.gch/header.hpp.dg++.gch"
            ]
        },
        {
            "label": "PreCompile header.hpp(Release)",
            "detail": "algolibのheader.hppをReleaseビルドでプリコンパイルする",
            "hide": true,
            "command": "$CXX_COMPILER",
            "args": [
                "{$ALGOLIB_PATH}/src/header.hpp",
                "$CXX_COMMON_OPTIONS",
                "$CXX_RELEASE_OPTIONS",
                "-o",
                "{$ALGOLIB_PATH}/src/header.hpp.gch/header.hpp.fg++.gch"
            ]
        },
        {
            "label": "Build Input Generator(Release)",
            "detail": "現在開いているファイルに対応する入力生成器をReleaseビルドする",
            "hide": true,
            "command": "$CXX_COMPILER",
            "args": [
                "${fileBasenameNoExtension}_gi.cpp",
                "$CXX_COMMON_OPTIONS",
                "$CXX_RELEASE_OPTIONS",
                "-o",
                "${fileBasenameNoExtension}_gi.exe"
            ]
        },
        {
            "label": "Build Output Generator(Release)",
            "detail": "現在開いているファイルに対応する出力生成器をReleaseビルドする",
            "hide": true,
            "command": "$CXX_COMPILER",
            "args": [
                "${fileBasenameNoExtension}_go.cpp",
                "$CXX_COMMON_OPTIONS",
                "$CXX_RELEASE_OPTIONS",
                "-o",
                "${fileBasenameNoExtension}_go.exe"
            ]
        },
        {
            "label": "Delete Testcases",
            "detail": "テストケースを削除する",
            "hide": true,
            "command": "rm",
            "args": [
                "-rf",
                "${fileBasenameNoExtension}_case",
                "${fileBasenameNoExtension}.exe"
            ]
        }
    ]
}
